        </exclusion>
        <exclusion>
          <groupId>com.github.apache.camel-k</groupId>
          <artifactId>camel-k-runtime-spring-boot</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.github.apache.camel-k</groupId>
          <artifactId>camel-k-runtime-spring-boot-layout</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.github.apache.camel-k</groupId>
          <artifactId>camel-k-runtime-yaml</artifactId>
        </exclusion>
        <exclusion>
