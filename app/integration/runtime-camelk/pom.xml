    <dependency>
      <groupId>com.github.apache</groupId>
      <artifactId>camel-k</artifactId>
      <version>master-SNAPSHOT</version>
      <exclusions>
        <exclusion>
          <groupId>com.github.apache.camel-k</groupId>
