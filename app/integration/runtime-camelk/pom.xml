    <!-- camel-k -->
    <!--
    <dependency>
      <groupId>org.apache.camel.k</groupId>
      <artifactId>camel-k-runtime-core</artifactId>
      <version>0.2.1-SNAPSHOT</version>
    </dependency>
    -->
